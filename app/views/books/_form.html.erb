<%= form_for @book do |form| %>
  <% unless @book.errors.empty? %>
    <p>入力に誤りがります</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <li>	<%=form.label :title%> : <%= form.text_field :title %></li>
  <li>	<%= form.label :publish_year%> : <%= form.text_field :publish_year %></li>
  <li> <%= form.label :authors%> : <%= form.text_field :authors %></li>
  <li> <%= form.check_box :checked_out, checked: true %> <%= form.label :checked_out %></li>
  <li> <%= form.label :comment%><%= form.text_area :comment %></li>
  <%= form.submit %>
<% end %>