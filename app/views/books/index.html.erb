<%= render "categories" %>
<%= render "navigation" %>

<table class="books">
<col class="title">
<col class="authors">
<col class="publish_year">
<% @books.each do |book| %>
	<tr>
		<td>タイトル： <%= link_to book.title, book%>
		<td>筆者：<%= book.authors %></td>
		<td>出版日：<%= book.publish_year %></td>
		<td> <%= links_for(book)%> </td>
	</tr>
<% end %>
<td>
</table>
<%= form_tag [:search, :books], method: :get do %>
	<%= text_field_tag "q", params[:q] %>
	<%= submit_tag "検索" %>
<% end %>
<h3><%= link_to "新規登録", [:new, :book]%></h3>